<div class="row">
	<h1>スタイル追加</h1>
</div>
<div class="row">
	<% if @style.errors.any? %>
      <div class="alert-warning">
        <ul>
          <% @style.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
</div>
<div class="row">
		<div class="col-xs-3">
			<div class="form-group">
				<div class="row">
					<%= form_for @style, url:  admin_styles_path do |f| %>
	                <%= f.attachment_field :style_image %>
	            </div>
                <div class="row">
	          	    <lavel>顔型</lavel>
          	        <%= f.collection_select(:form_id, Form.all, :id, :form_name, {prompt: "--選択してください--"}) %>
          	    </div>
	            <div class="row">
	          	    <lavel>髪の長さ</lavel>
          	        <%= f.collection_select(:length_id, Length.all, :id, :length_name, {prompt: "--選択してください--"}) %>
				</div>
		    	</div>
		    </div>
		    <div class="col-xs-6">
		    	<div class="form-group">
		    		<%= f.text_area :style_body %>
		    	</div>
		    </div>
		    <div class="col-xs-3">
		    	<div class="row">
 		    	<div class="form-group">
 		    		<%= f.text_field :style_name %>
 		    	</div>
 		    </div>
			<div class="row">
 		    	<div class="form-group">
 		    		<%= f.submit '登録' , class:"btn-default btn-lg btn btn-primary " %>
    				<% end %>
    			</div>
    		</div>
		    </div>
	</div>
<div class="row">
	<h1>スタイル一覧</h1>
</div>
<div class="row">
	<table class="table">
		<% @styles.each do |style| %>
			<tr>
				<td>
	                <%= attachment_image_tag style, :style_image, :fill, 40, 40, format: 'jpeg'%>
				</td>
				<td>
					<%= style.form.form_name %><br>
					<%= style.length.length_name %>
				</td>
        		<td>
	            	<%= style.style_body %>
	            </td>
	            <td>
	            	<%= style.style_name %>
	            </td>
				<td>
					<%= link_to "Destroy", admin_style_path(style), method: :delete, data: { confirm: '削除しますか？' }  %>
				</td>
			</tr>
        </div>
		<% end %>
	</table>
</div>

