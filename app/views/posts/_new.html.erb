<div class="new_modal">
	<button type="button" class="button1" data-toggle="modal" data-target="#createModal" data-backdrop="false">
		<span class="glyphicon glyphicon-plus-sign" ></span>
	</button>
		<!-- modal＝閉じるまで他のことができない data-toggle=開閉する事ができる data-target=場所指定 -->
	<div class="modal" id="createModal" role="dialog" >
		<!-- role=役職 dialog＝時的に開かれる小さい画面-->
	  <div class="modal-dialog modal-dialog-centered" >
	    <div class="modal-content" id="new_modal">
	      <div class="modal-header">
	      	<div class="col-xs-8">
	        	<h1 class="modal-title">New Post</h1>
	        </div>
	        <button type="button" class="close" data-dismiss="modal" >
	          <span class="glyphicon glyphicon-remove" ></span>
	        </button>
	      </div>
	      <div class="modal-body">
	      	<div class="row">
			<%= form_for post do |f| %>
			<div class="row">
				<% if post.errors.any? %>
			      <div class="alert-warning">
			        <ul>
			          <% post.errors.full_messages.each do |message| %>
			            <li><%= message %></li>
			          <% end %>
			        </ul>
			      </div>
			    <% end %>
			</div>
		 		<div class="row">
	 		    	<div class="form-group">
	 		    		<%= f.label "タイトル(必須)" %>
	 		    		<%= f.text_field :title , rows:'1', class: "form-control", id:"required" %>
	 		    	</div>
	 		    	<div class="form-group">
	 		    		<%= f.label "コメント(必須)" %>
	 		    		<%= f.text_area :post_body, rows:'2', class: "form-control", id:"required" %>
	 		    	</div>
	 		    	<div class="col-xs-6">
		 		    	<div class="form-group">
		 		    		<%= f.label "巻き方" %>
		 		    		<%= f.text_field :winding , rows:'1', class: "form-control" %>
		 		    	</div>
		 		    	<div class="form-group">
		 		    		<%= f.label "セットに使ったアイテム" %>
		 		    		<%= f.text_field :item , class: "form-control" %>
		 		    	</div>
		 		    	<div class="form-group">
		 		    		<%= f.label "コテのmm数" %>
		 		    		<%= f.text_field :size , class: "form-control" %>
		 		    	</div>
		 		    </div>
		 		    <div class="col-xs-6">
						<div class="form-group">
			                <%= f.attachment_field :post_image, id:"image" %>
			                <% if post.post_image.present? %>
							  <%= image_tag post.post_image, id: :img_prev %>
							<% else %>
							  <%= image_tag "20161008_noimage 2 2.png", id: :img_prev %>
							<% end %>
		 		    	</div>
		 		    </div>
	 		    </div>
	 	  </div>
		  <div class="modal-footer">
		    	<div class="form-group">
		    		<%= f.submit 'Create' , class:"btn-default btn-lg btn ", id:"confirm" %>
			<% end %>
    		</div>
	      </div>
	    </div>
	  </div>
	</div>
</div>